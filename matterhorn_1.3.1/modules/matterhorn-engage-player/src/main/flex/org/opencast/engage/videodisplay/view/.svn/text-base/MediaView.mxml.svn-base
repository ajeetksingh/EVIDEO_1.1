<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
		   width="100%"
		   height="100%"
		   xmlns:view="org.opencast.engage.videodisplay.view.*"
		   top="5"
		   bottom="5"
		   left="5"
		   right="5">

	<mx:Script>
		<![CDATA[
			import bridge.ExternalFunction;
			import org.opencast.engage.videodisplay.model.VideodisplayModel;
			import org.swizframework.Swiz;

			[Autowire]
			[Bindable]
			public var model:VideodisplayModel;

			/**
			 * playPause
			 * Toggle between play and pause
			 */
			private function playPause():void
			{
				ExternalInterface.call(ExternalFunction.PLAYPAUSE, '');
			}
		]]>
	</mx:Script>

	<mx:states>

		<mx:State name="single">

			<mx:SetProperty target="{ bx_single }"
							name="visible"
							value="true"/>

			<mx:SetProperty target="{ bx_single }"
							name="includeInLayout"
							value="true"/>
		</mx:State>

		<mx:State name="multi">

			<mx:SetProperty target="{ bx_multi }"
							name="visible"
							value="true"/>

			<mx:SetProperty target="{ bx_multi }"
							name="includeInLayout"
							value="true"/>
		</mx:State>

		<mx:State name="cover">

			<mx:SetProperty target="{ bx_cover }"
							name="visible"
							value="true"/>

			<mx:SetProperty target="{ bx_cover }"
							name="includeInLayout"
							value="true"/>
		</mx:State>
	</mx:states>

	<view:SingleMediaContainerView id="bx_single"
								   visible="false"
								   includeInLayout="false"
								   width="100%"
								   height="100%"
								   click="{ playPause() }"/>

	<view:MultiMediaContainerView id="bx_multi"
								  visible="false"
								  includeInLayout="false"
								  width="100%"
								  height="100%"
								  currentState="{model.videoSizeState}"
								  click="{ playPause() }"/>

	<view:CoverView id="bx_cover"
					visible="false"
					includeInLayout="false"
					currentState="{ model.coverState }"/>

	<view:Splashscreen id="splashscreen"
					   width="100%"
					   height="100%"/>
</mx:Canvas>
